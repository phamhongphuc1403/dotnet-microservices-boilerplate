{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Postgres": "Host=localhost; Port=5432; Database=TinyCRM.Identity; Username=postgres; Password=password",
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "Issuer": "issuer",
    "Audience": "audience",
    "AccessTokenSecurityKey": "access-token-security-key",
    "AccessTokenLifeTimeInMinute": 5,
    "RefreshTokenSecurityKey": "refresh-token-security-key",
    "RefreshTokenLifeTimeInMinute": 43200
  },
  "OpenApi": {
    "Document": {
      "Title": "Identity",
      "Version": "v1"
    }
  },
  "EventBus": {
    "SubscriptionClientName": "Identity"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5003"
      },
      "gRPC": {
        "Url": "http://localhost:50051",
        "Protocols": "Http2"
      }
    }
  },
  "Serilog": {
    "SeqServerUrl": "http://localhost:5341",
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "ServiceName": "Identity"
  }
}
