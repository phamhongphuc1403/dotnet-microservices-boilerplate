{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JWTSettings": {
    "securityKey": "TinyCRM@TopSecretKey",
    "validIssuer": "https://localhost:5001",
    "validAudience": "https://localhost:5001",
    "expireMinute": 5,
    "expireDay": 30
  },
  "SeriLog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../TinyCRM.Infrastructure/Logger/logs.txt",
          "rollingInternal": "Day"
        }
      },
      {
        "Name": "Console"
      }
    ]
  },
  "ConnectionStrings": {
    //"DefaultConnection": "Server=172.30.160.1,14433;Database=TinyCRM;User Id=sa;Password=yourStrong(!)Password;TrustServerCertificate=True"
    "DefaultConnection": "Data Source=phuc\\phuc;Initial Catalog=TinyCRM;Integrated Security=True;TrustServerCertificate=True"
  },
  "AllowedHosts": "*"
}